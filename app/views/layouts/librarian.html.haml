!!!
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %title&= yield(:title) || "Sistema de Estudiantes Asociados - SIESTA"
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'dashboard.css', :media => 'screen, projection'
    = stylesheet_link_tag 'ui/themes/smoothness/jquery.ui.all'
    = stylesheet_link_tag "ui/themes/smoothness/jquery-ui-1.8.14.custom"
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag "jquery"
    = javascript_include_tag 'jquery_ujs'
    = javascript_include_tag "ui/jquery-ui-1.8.14.custom"
    = javascript_include_tag 'ui/jquery.ui.core'
    = javascript_include_tag 'ui/jquery.ui.widget'
    = javascript_include_tag 'ui/jquery.ui.button'
    = javascript_include_tag 'ui/jquery.ui.dialog'
    = javascript_include_tag "siesta_application"
    = javascript_include_tag "librarians_application"
  %body
    %div{:class =>'container'}
      %div{:id => 'header', :class => "span-24 last"}
        %h1= link_to "Instituto de FÃ­sica - UNAM", "http://www.fisica.unam.mx", :target => '_new', :class => 'button'
      %div{:id => 'main', :class => 'span-24 last'}
        = yield :layout
      %div{:id => 'main_footer', :class => 'span-24 last'}
      = render :partial => 'layouts/footer'
    %div{:id => 'dialog'}
