%table{:class=>"ui-widget-header ui-corner-all ui-helper-clearfix", :id=>"table_search_form"}
  %thead
    = form_for :search, :url => managers_students_path, :remote => true, :html => {:id => "search_form"} do |f|
      %tr
        %th="Nombre"
        %th="Apellido Paterno"
        %th="Apellido Materno"
        %th="Periodo"
        %th="Tipo de actividad"
        %th="Estado de solicitud"
        %th="Tipo de solicitud"
        %th="Aprobada por CD-IF"
        %th="-"
        %th="-"
      %tr
        %td= f.text_field :fullname_like, :size => 5 
        %td= f.text_field :firstname1_like, :size => 5 
        %td= f.text_field :firstname2_like, :size => 5
        %td= f.collection_select :period_id_equals, Period.all, :id, :name, :prompt => true
        %td= f.collection_select :role_id_equals, Role.all, :id, :name, :prompt => true
        %td= f.collection_select :requeststatus_id_equals, Requeststatus.all, :id, :name, :prompt => true
        %td
          = f.radio_button :user_request_is_restamped, false
          = 'Solicitud nueva'
          %br
          = f.radio_button :user_request_is_restamped, true
          = 'Resello'
        %td
          = f.radio_button :user_request_is_official, true
          = 'Aprobada'
          %br
          = f.radio_button :user_request_is_official, false
          = 'Sin Aprobar'
        %td= link_to "Buscar", '#', :class => 'ui-state-default ui-corner-all button', :id => 'search_link'
        %td= link_to 'Mostrar todos',  managers_students_path, :class => 'ui-state-default ui-corner-all button'

