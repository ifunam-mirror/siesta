%table{:class=>"ui-widget-header ui-corner-all ui-helper-clearfix", :id=>"table_search_form"}
  %thead
    = form_for :search, :url => search_managers_students_path, :remote => true, :html => {:id => "search_form"} do |f|
      %tr
        %th="Nombre(s)"
        %th="Apellido paterno"
        %th="Apellido materno"
        %th="Periodo"
        %th="Estado de solicitud"
        %th="-"
        %th="-"
      %tr
        %td= f.text_field :firstname_like, :size => 25
        %td= f.text_field :lastname1_like, :size => 25
        %td= f.text_field :lastname2_like, :size => 25
        %td= f.collection_select :period_equals,  Period.all, :id, :name, :prompt => true
        %td= f.collection_select :requeststatus_equals,  Requeststatus.all, :id, :name, :prompt => true
        %td= link_to "Buscar", '#', :class => 'ui-state-default ui-corner-all button', :id => 'search_link'
        %td= link_to 'Mostrar todos',  managers_students_path, :class => 'ui-state-default ui-corner-all button'

