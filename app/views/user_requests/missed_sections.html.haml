%h3= t '.title'

.well.alert.alert-info
  %p
    = "Secciones con información:"
  %ul
  - @sections.filled.each do |resource|
    %li= link_to image_tag('ok.gif', :border => 0) + t(resource.title), resource.url

.well.alert.alert-warn
  %p
    = "Debes completar la siguiente información: "
  %ul
  - @sections.missed.each do |resource|
    %li= link_to image_tag('missing.gif', :border => 0) + t(resource.title), resource.url
