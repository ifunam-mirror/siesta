.well.span5
  %h2= t('.title')
  = simple_form_for(@account, :as => :account, :url => session_path(:account)) do |f|
    .form-inputs
      = f.input :email, :required => true, :autofocus => true, :as => :string
      = f.input :password, :required => true
      = f.input :remember_me, :as => :boolean
    .form-actions
      = f.button :submit, :class => 'btn btn-primary'
  = render "accounts/shared/links"
