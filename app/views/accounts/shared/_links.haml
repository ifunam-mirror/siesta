- if controller_name != 'sessions'
  .span4.alert.alert-success
    = link_to t(:sign_in), new_session_path(:account), :class => 'btn btn-info' 
    .clearfix
    %br/
    .well.alert.alert-info
      .i.icon-info-sign
      = ' '
      = t('.hint_5')
- if controller_name != 'registrations'
  .span4.alert.alert-info
    = link_to t(:sign_up), new_registration_path(:account), :class => 'btn btn-success'
    .clearfix
    %br/
    .well.alert.alert-success
      .i.icon-info-sign
      = ' '
      = t('.hint_1')
    .well.alert.alert-success
      .i.icon-info-sign
      = ' '
      = t('.hint_2')
    .well.alert.alert-success
      .i.icon-info-sign
      = ' '
      = t('.hint_3')
  .clearfix
  %br/
- if controller_name != 'passwords'
  .span4.alert.alert-warning
    = link_to t(:new_password), new_password_path(:account), :class => 'btn btn-warning'
    .clearfix
    %br/
    .well.alert.alert-success
      .i.icon-info-sign
      = ' '
      = t('.hint_4')

  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Didn't receive confirmation instructions?", new_confirmation_path(:account)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Didn't receive unlock instructions?", new_unlock_path(:account)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(:account, provider)
    %br/
