- blueprint 'span-23 last', :id => schooling.dom_id  do
  - blueprint('span-3') do
    = schooling.degree.name
  - blueprint('span-10') do
    %p
      = t(:career) + ': '
      = schooling.career
    %p 
      = t(:school) + ': '
      = schooling.school
    %p
      = t(:institution) + ': '
      = schooling.institution
    %p 
      = t(:average) + ': '
      = schooling.average
      = ', '
      = t(:credits) + ': '
      = schooling.credits || '-'
    %p 
      = t(:is_studying_this) + ': '
      = schooling.is_studying_this? ? 'Sí' : 'No'
    %p 
      = t(:is_titleholder) + ': '
      = schooling.is_titleholder? ? 'Sí' : 'No'
    %p
      = link_to t(:cardex), schooling.file.url, :target => :new
  - blueprint('span-3') do
    = schooling.startyear
  - blueprint('span-3') do
    = schooling.endyear || '-'
  - blueprint('span-4 last') do
    = link_to t(:edit), edit_schooling_path(schooling), :method => :get
    = ' | '
    = link_to t(:delete), schooling_path(schooling), :method => :delete, :confirm => t(:confirm_question)